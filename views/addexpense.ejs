<%- include("../partials/header.ejs") %>
<html>
    <head>
        <style>
            .expense{
                margin: 100px;
                margin-left: 450px;
                margin-right: 450px;
                border: 10px solid black;
                align-items: center;
                justify-content: center;
                padding-left: 60px;
                padding-right: 60px;
                padding-top: 3.5%;
                padding-bottom: 3.5%;
                border-radius: 5px;
                background: linear-gradient(300deg,
          #76f665,
          #b0e6f3,
          #ffffff);
            }
            button{
                width: 100px;
                height: 50px;
                border-radius: 5px;
            }
            button:hover 
            {
                background-color: #9eecaf;
                transform: scale(1.05);
            }
            .cash{
               font-size: 30px; 
            }
        </style>
    </head>
  <body>
    <h1>Expense data</h1>
   <div class="expense">
    <form action="/addexpense" method="post" onsubmit="return validate()">
      <label class="cash">Amount:</label><br><br>
<input type="number" placeholder="number" name="number" style="width: 300px; height: 5%;" /><br><br>

<div id="errorDes" class="error" style="color:red; display:none;">
        Please enter amount
      </div>
<label class="cash">Category:</label><br><br>
<select name="category" id="category" required>
    <option value="" disabled selected hidden>Category</option>
    <option value="Food">Food</option>
    <option value="Travel">Travel</option>
    <option value="Shopping">Shopping</option>
    <option value="Entertainment">Entertainment</option>
    <option value="Bills">Bills</option>
  </select>

<div id="errorDes" class="error" style="color:red; display:none;">
        Please enter the category
      </div>

<label class="cash">Date:</label><br><br>
<input type="date" name="date" id="userdate" style="width: 300px; height: 5%;" /><br><br>
<div id="errorDes" class="error" style="color:red; display:none;">
        Please enter the Date
      </div>

<label class="cash">Description</label><br><br>
<input type="text" name="Description" id="Des" style="width: 300px; height: 10%;" /><br><br>
<div id="errorDes" class="error" style="color:red; display:none;">
        Please enter the Description
      </div>

      <button type="submit" id="custom-button">Add Expense</button>
    </form>
   </div>

    <script>
      function validate() {
        const amount = document.getElementById("cash").value.trim();
        const catgry= document.getElementById("cat").value.trim();
        const date = document.getElementById("userdate").value.trim();
        const des = document.getElementById("Des").value.trim();
        let isValid = true; 

        if (!amount) {
          document.getElementById("errorAmt").style.display = "block";
          isValid = false;
        } else {
          document.getElementById("errorAmt").style.display = "none";
        }

        if (!catgry) {
          document.getElementById("errorCat").style.display = "block";
          isValid = false;
        } else {
          document.getElementById("errorCat").style.display = "none";
        }

        if (!date) {
          document.getElementById("errorDate").style.display = "block";
          isValid = false;
        } else {
          document.getElementById("errorDate").style.display = "none";
        }

        if (!des) {
          document.getElementById("errorDes").style.display = "block";
          isValid = false;
        } else {
          document.getElementById("errorDes").style.display = "none";
        }
        return isValid; 
      }
    </script>
  </body>
</html>

